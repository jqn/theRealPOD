container_commands:
  01_migrate:
    command: "django-admin.py migrate"
    leader_only: true
  02_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python django-admin.py collectstatic --noinput"
option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "theRealPOD.settings"
    PYTHONPATH: "/opt/python/current/app/theRealPOD:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: "theRealPOD/wsgi.py"
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "static/"
